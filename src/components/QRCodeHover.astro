---
import QRCode from "qrcode";
import type { QRCodeConfig } from "../config/qrcodes";

interface Props {
  config: QRCodeConfig;
  label?: string;
  class?: string;
}

const { config, label, class: className } = Astro.props;

const primaryQrDataUrl = await QRCode.toDataURL(config.primary.content, {
  width: 200,
  margin: 2,
  color: {
    dark: "#1e293b",
    light: "#ffffff",
  },
});

const secondaryQrDataUrl = await QRCode.toDataURL(config.secondary.content, {
  width: 200,
  margin: 2,
  color: {
    dark: "#1e293b",
    light: "#ffffff",
  },
});

const expiryDate = config.primary.expiryDate;
---

<div class={`qr-hover-container ${className || ""}`} data-expiry={expiryDate}>
  <slot />
  <div class="qr-popup">
    <div class="qr-content">
      <div class="qr-image-wrapper qr-primary">
        <img
          src={primaryQrDataUrl}
          alt={`QR Code for ${label || "link"}`}
          class="qr-image"
        />
        {
          config.primary.centerIcon && (
            <div class="qr-center-icon">{config.primary.centerIcon}</div>
          )
        }
      </div>
      <div class="qr-image-wrapper qr-secondary" style="display: none;">
        <img
          src={secondaryQrDataUrl}
          alt={`QR Code for ${label || "link"} (backup)`}
          class="qr-image"
        />
        {
          config.secondary.centerIcon && (
            <div class="qr-center-icon">{config.secondary.centerIcon}</div>
          )
        }
      </div>
      {label && <p class="qr-label">{label}</p>}
    </div>
  </div>
</div>

<script>
  function checkQRExpiry() {
    const containers = document.querySelectorAll(".qr-hover-container");

    containers.forEach((container) => {
      const expiryDate = container.getAttribute("data-expiry");
      if (!expiryDate) return;

      const now = new Date();
      const expiry = new Date(expiryDate);
      const isExpired = now > expiry;

      const primaryWrapper = container.querySelector(
        ".qr-primary"
      ) as HTMLElement;
      const secondaryWrapper = container.querySelector(
        ".qr-secondary"
      ) as HTMLElement;

      if (isExpired) {
        if (primaryWrapper) primaryWrapper.style.display = "none";
        if (secondaryWrapper) secondaryWrapper.style.display = "block";
      } else {
        if (primaryWrapper) primaryWrapper.style.display = "block";
        if (secondaryWrapper) secondaryWrapper.style.display = "none";
      }
    });
  }

  checkQRExpiry();

  document.addEventListener("astro:page-load", checkQRExpiry);
</script>

<style>
  .qr-hover-container {
    position: relative;
    display: inline-block;
  }

  .qr-popup {
    position: absolute;
    bottom: calc(100% + 12px);
    left: 50%;
    transform: translateX(-50%);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.2s ease,
      visibility 0.2s ease;
    pointer-events: none;
    z-index: 50;
  }

  .qr-hover-container:hover .qr-popup {
    opacity: 1;
    visibility: visible;
  }

  .qr-content {
    background: white;
    border-radius: 12px;
    padding: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    border: 1px solid #e2e8f0;
  }

  :global(.dark) .qr-content {
    background: #1e293b;
    border-color: #334155;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
  }

  .qr-image-wrapper {
    position: relative;
    width: 200px;
    height: 200px;
  }

  .qr-image {
    width: 100%;
    height: 100%;
    border-radius: 8px;
  }

  .qr-center-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 40px;
    background: white;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .qr-label {
    margin-top: 12px;
    margin-bottom: 0;
    font-size: 14px;
    font-weight: 500;
    color: #475569;
    text-align: center;
  }

  :global(.dark) .qr-label {
    color: #cbd5e1;
  }

  .qr-popup::after {
    content: "";
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 8px solid transparent;
    border-top-color: white;
  }

  :global(.dark) .qr-popup::after {
    border-top-color: #1e293b;
  }
</style>
